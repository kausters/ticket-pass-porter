{
	"extends": ["next/core-web-vitals", "prettier"],
	"plugins": ["jest-dom", "simple-import-sort", "testing-library"],
	"rules": {
		"simple-import-sort/imports": "error",
		"simple-import-sort/exports": "error"
	},
	"overrides": [
		{
			"files": ["*.test.?(*.){ts,tsx}"],
			"rules": { "react/display-name": "off" }
		}
	]
}
